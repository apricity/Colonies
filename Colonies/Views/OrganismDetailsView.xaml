<UserControl x:Class="Wacton.Colonies.Views.OrganismDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Converters="clr-namespace:Wacton.Colonies.Converters"
             xmlns:ViewModels="clr-namespace:Wacton.Colonies.ViewModels"
             xmlns:DesignTimeData="clr-namespace:Wacton.Colonies.ViewModels.DesignTimeData"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance ViewModels:OrganismViewModel}">

    <UserControl.Resources>
        <Converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <Converters:BoolToAliveOpacityConverter x:Key="AliveToOpacityConverter" />
        <Converters:DoubleToHealthLevelBrushConverter x:Key="DoubleToHealthLevelBrushConverter" />
        <DesignTimeData:DesignTimeOrganismViewModel x:Key="DesignTimeOrganismViewModel" />
    </UserControl.Resources>

    <!-- TODO: remove stackpanel, use grid only for more organised spacing -->
    <Grid d:DataContext="{Binding Source={StaticResource DesignTimeOrganismViewModel}}">
        <StackPanel Orientation="Horizontal">
            <Rectangle Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" 
                   Opacity="{Binding IsAlive, Converter={StaticResource AliveToOpacityConverter}}" MinWidth="20" MinHeight="20"/>
            <TextBlock Text="{Binding Name}"/>
            <ProgressBar Minimum="0" Maximum="1" Value="{Binding HealthLevel, Mode=OneWay}" BorderThickness="0"
                     Style="{StaticResource HealthLevelProgressBar}" 
                     Foreground="{Binding HealthLevel, Converter={StaticResource DoubleToHealthLevelBrushConverter}}" MinWidth="100"/>
        </StackPanel>
    </Grid>
</UserControl>
